{
  // This is a CloudWatch alarm configuration for EC2 CPU utilization
  "AlarmName": "EC2-High-CPU-Alarm",
  "AlarmDescription": "Alarm triggers when EC2 CPU usage exceeds 80% for 5 minutes",
  "ActionsEnabled": true,
  "AlarmActions": [
    "arn:aws:sns:us-east-1:123456789012:NotifyMeTopic" // Replace with your actual SNS topic ARN
  ],
  "MetricName": "CPUUtilization",
  "Namespace": "AWS/EC2",
  "Statistic": "Average",
  "Dimensions": [
    {
      "Name": "InstanceId",
      "Value": "i-0123456789abcdef0" // Replace with your actual EC2 instance ID
    }
  ],
  "Period": 300,               // Evaluation period in seconds (5 minutes)
  "EvaluationPeriods": 1,      // Alarm will trigger if condition is met once
  "Threshold": 80.0,           // Alarm threshold set to 80%
  "ComparisonOperator": "GreaterThanThreshold",
  "TreatMissingData": "missing" // Prevents false alarms if no data is reported
}
